<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/warehouseHolder"

        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Warehouse"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        app:buttonTint="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
        android:id="@+id/addressHolder"

        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/material_dynamic_neutral30"
        app:layout_constraintBottom_toBottomOf="@id/warehouseHolder"
        app:layout_constraintTop_toTopOf="@id/warehouseHolder"
        app:layout_constraintLeft_toRightOf="@id/warehouseHolder"
        android:layout_marginHorizontal="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>